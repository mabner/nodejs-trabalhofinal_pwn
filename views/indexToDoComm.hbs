<ul>
    <div>
        <form id="ToDoComm" name="ToDoComm" method="" action="" target="_blank">
            <!-- -->
            <fieldset style="background-color: #eeeeee; position:relative; height:auto; width:300px;">
                <legend style="background-color: gray; color: black; padding: 5px 10px;"><b>Comentário do Produto:</b>
                </legend>
                <br>
                <!-- -->
                <label for="Autor"><b></b></label>
                <input type="text" id="autor" name="autor" placeholder="Autor do Comentário" size="30" required> <br>
                <br>
                <!-- -->
                <input type="text" id="comentario" name="comentario" placeholder="Comentário sobre o Produto" size="50"
                       required> <br> <br>
                <!-- -->
                <button type="Submit" onclick="InserirToDoComm()">Inserir Comentário</button>
                <!-- -->
                <button type="Submit" onclick="ListarToDoComm()">Listar Comentários</button>
                <!-- -->
                <input type="button" onclick="LimparForm('ToDoComm')" value="Reset Form">
                <!-- -->
            </fieldset>
            <!-- -->
        </form>
    </div>
</ul>