<script>
    //
    function LimparForm(NomeForm) {
        document.getElementById(NomeForm).reset();
    }

    //
    function ListarToDoComm() {
        const rota = "/Comments/CommList";
//
        console.log(rota);
        document.forms[0].action = rota;
        document.forms[0].method = "get";
        document.forms[0].submit();
//
    }

    //
    function InserirToDoComm() {
        const autor = document.getElementById("autor").value;
        const comentario = document.getElementById("comentario").value;
        const datecomm = Date.now();
        //
        const email = 'lromerosl@yahoo.com.br';
        var rota = "/Comments/CommList?Autor=";
        var rotaid = "";
        //
        if (autor == "") {
            rotaid = rota.concat("Desconhecido");
        } else {
            rotaid = rota.concat(autor);
        }
        if (comentario == "") {
            rotaid = rotaid.concat("&Comment=Sem Comentários");
        } else {
            rotaid = rotaid.concat("&Comment=");
            rotaid = rotaid.concat(comentario);
        }
        //
        rotaid = rotaid.concat("&datecomm=");
        if (datecomm == "") {
            rotaid = rotaid.concat("01/01/0001");
        } else {
            rotaid = rotaid.concat(datecomm);
        }
        //
        rotaid = rotaid.concat("&emailAut=");
        if (email == "") {
            rotaid = rotaid.concat("@");
        } else {
            rotaid = rotaid.concat(email);
        }
        //
        console.log(rotaid);
        document.forms[0].action = rotaid;
        document.forms[0].method = "post";
        document.forms[0].submit();
    }

    //
</script>
<!-- -->
<h1>Aplicativo Listas To-Do</h1>
<p>Bem-vindo. Entre com seu Comentário da APP</p>
